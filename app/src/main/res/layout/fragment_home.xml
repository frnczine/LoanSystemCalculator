<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Hi Username -->
    <TextView
        android:id="@+id/txtHi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Hi, [USERNAME]"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <!-- Intro Text Above Cards -->
    <TextView
        android:id="@+id/txtIntroUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Borrow Smart, Live Better."
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <!-- Intro 2 -->
    <TextView
        android:id="@+id/txtIntro2User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Choose the type of loan you want to avail"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <!-- Cards Container -->
    <LinearLayout
        android:id="@+id/gridMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <!-- CARD 1 - Emergency Loan -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEmergencyLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/mainIcon1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/emergencyicon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Emergency Loan"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When urgent moments strike, we've got you, reliable emergency loans"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/loanarrow" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <!-- CARD 2 - Special Loan -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSpecialLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/mainIcon2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/specialicon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Special Loan"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fast and flexible personal loans to meet your needs"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/loanarrow" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <!-- CARD 3 - Regular Loan -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRegularLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/mainIcon3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/loanhand" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Regular Loan"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See the list of Approved Loans available for you"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/loanarrow" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout> <!-- End of gridMenu -->

</LinearLayout>